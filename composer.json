{
    "name": "tilleuls/url-signer-bundle",
    "type": "symfony-bundle",
    "description": "Create and validate signed URLs with a limited lifetime in Symfony",
    "keywords": ["symfony", "security", "url", "encryption", "sign"],
    "license": "MIT",
    "authors": [
        {
            "name": "Alan Poulain",
            "email": "alan@les-tilleuls.coop"
        }
    ],
    "autoload": {
        "psr-4": {
            "CoopTilleuls\\UrlSignerBundle\\": ""
        },
        "exclude-from-classmap": ["/features/", "/tests/"]
    },
    "autoload-dev": {
        "psr-4": {
            "CoopTilleuls\\UrlSignerBundle\\Tests\\": "features/app/src",
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.4",
        "league/uri-components": "dev-master",
        "spatie/url-signer": "^1.1",
        "symfony/config": "^4.4 || ^5.1",
        "symfony/dependency-injection": "^4.4 || ^5.1",
        "symfony/event-dispatcher": "^4.4 || ^5.1",
        "symfony/http-kernel": "^4.4 || ^5.1",
        "symfony/routing": "^4.4 || ^5.1"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "friends-of-behat/symfony-extension": "dev-master",
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-symfony": "^2.1",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/framework-bundle": "^4.4 || ^5.0",
        "vimeo/psalm": "^4.4"
    },
    "config": {
        "sort-packages": true
    }
}
